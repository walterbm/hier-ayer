<%= render layout: "layouts/mainbar" do %>
  <div class="col-md-4 col-sm-4 col-xs-6">
    <h4><i class="fa fa-map lblue"></i><%= link_to @map.user.name.capitalize+"'s", user_path(@map.user) %> map: <%= @map.name %></h4>
  </div>
  <div class="col-md-4 col-sm-4 col-xs-6"></div>
  <div class="col-md-4 col-sm-4 col-xs-6"></div>
<% end %>

<%= render partial: "map", locals: {url: map_geojson_path(@map), action: "map#show"} %>

<%= render partial: "public_cards", locals: {map: @map} %>
